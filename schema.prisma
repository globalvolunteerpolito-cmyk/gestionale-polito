generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String?
  role     Role    @default(MEMBER)
  teamId   String?
  team     Team?   @relation(fields: [teamId], references: [id])
  EPs      EP[]    @relation("UserEPs")
}

model Team {
  id      String  @id @default(cuid())
  name    String
  members User[]
}

model EP {
  id          String @id @default(cuid())
  name        String
  email       String
  country     String
  status      String
  createdAt   DateTime @default(now())
  createdBy   String
  assignedTo  String?
  creator     User   @relation("UserEPs", fields: [createdBy], references: [id])
}

enum Role {
  MEMBER
  TL
  VP
}
